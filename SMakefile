if test ! -x configure; then
  echo aclocal -I cmulocal
  aclocal -I cmulocal
  echo autoheader
  autoheader
  echo autoconf
  autoconf
  echo automake --add-missing --include-deps
  automake --add-missing --include-deps
fi

case `uname` in
  Linux) CFLAGS="${CFLAGS} -O2 -g"
	 ;;

  SunOS) CC="cc"
	 CFLAGS="${CFLAGS} -xs -g"
	 ;;
esac

MAKE=gmake
LNCOMMAND="${SRCDIR}/configure --prefix=/usr/local --disable-java"
CPPFLAGS=-I/usr/local/include/gssapi

export CC CFLAGS CPPFLAGS
# -lgssapi_krb5 -lkrb5 -lk5crypto -lndbm
