if test ! -x configure; then
  echo aclocal -I cmulocal
  aclocal -I cmulocal
  echo autoheader
  autoheader
  echo autoconf
  autoconf
  echo automake --add-missing --include-deps
  automake --add-missing --include-deps
fi

# Note that SASLv1 doesn't build java on andrew anymore (it's overriden
# by the SASLv2 java

LIBS=""
case `uname` in
  Linux) CFLAGS="${CFLAGS} -O2 -g"
	 LIBS="-ldb"
	 LNEXTRA=""
	 ;;

  SunOS) CC="gcc"
	 CFLAGS="${CFLAGS} -O2 -g"
	 LNEXTRA=""
	 LIBS="-ldb"
#	 CC="cc"
#	 if test "${WASH_CYRUS_DEBUG}" = "t"; then
#	   CFLAGS="${CFLAGS} -xs -g"
#         else
#	   CFLAGS="${CFLAGS} -xO3 -xdepend"
#         fi
	 ;;
  Darwin) CFLAGS="${CFLAGS} -O2 -g"
	;;
esac

MAKE=gmake
LNCOMMAND="${SRCDIR}/configure --prefix=/usr/local --enable-login --enable-cmulocal --with-devrandom=/dev/urandom ${LNEXTRA}"
CPPFLAGS=-I/usr/local/include/gssapi

export CC CFLAGS CPPFLAGS LIBS
